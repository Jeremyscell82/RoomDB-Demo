<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding"
    android:layout_margin="2dp"
    android:background="@drawable/background_text_button_wht">

    <TextView
        android:id="@+id/entryId"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        style="@style/font_style_body"
        android:gravity="center"
        tools:text="01"/>


    <TextView
        android:id="@+id/entrySuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/font_style_body"
        android:gravity="center"
        tools:text="Testings suggestionto see if I can fit more that on line of strings on this "
        android:lines="2"/>



</LinearLayout>